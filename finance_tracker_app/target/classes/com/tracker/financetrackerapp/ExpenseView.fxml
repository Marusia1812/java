<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.tracker.financetrackerapp.ExpenseController" spacing="10" style="-fx-padding: 20px; -fx-font-family: 'Arial';">
    <ListView fx:id="expenseListView" prefHeight="300" VBox.vgrow="ALWAYS" style="-fx-background-color: #f4f4f4; -fx-border-color: #ddd; -fx-border-width: 1px;">
    </ListView>
    <HBox spacing="10">
        <Button text="Add Expense" onAction="#showAddEntryModal" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-border-radius: 5px;">
        </Button>
        <Button text="Delete" onAction="#handleDeleteEntry" style="-fx-background-color: #F00; -fx-text-fill: white; -fx-padding: 10px 20px; -fx-border-radius: 5px;"/>
    </HBox>
</VBox>

