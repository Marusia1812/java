<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.tracker.financetrackerapp.AddEntryModalController"
          hgap="10" vgap="10"
          style="-fx-padding: 20px; -fx-alignment: CENTER;">

    <Label text="Amount:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="amountField" promptText="Enter Amount" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="descriptionField" promptText="Enter Description" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 14px;"/>

    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="categoryBox" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 14px;" />

    <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-size: 14px;"/>

    <Button text="Add Entry" onAction="#handleAddEntry" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"/>
</GridPane>
